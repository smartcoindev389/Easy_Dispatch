# Node Environment
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=24h

# Firebase Configuration
# Option 1: Use service account JSON file (recommended for local development)
FIREBASE_CREDENTIALS_PATH=./serviceAccountKey.json
FIREBASE_PROJECT_ID=your-firebase-project-id

# Option 2: Use environment variables (alternative to JSON file)
# Uncomment and use these if you prefer not to use a JSON file
# FIREBASE_PROJECT_ID=your-firebase-project-id
# FIREBASE_CLIENT_EMAIL=your-service-account-email@your-project.iam.gserviceaccount.com
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"

# Carrier API Configuration (Frenet)
CARRIER_FRENET_APIKEY=your-frenet-api-key
CARRIER_FRENET_TOKEN=your-frenet-token

# Carrier Settings
CARRIER_TIMEOUT_MS=10000
CARRIER_RETRY_ATTEMPTS=1
CARRIER_CIRCUIT_BREAKER_THRESHOLD=5

# Billing Configuration
BILLING_MARKUP_PERCENT=20
BILLING_FIXED_FEE=5.0
